    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug DEV",
      "cargo": {
        "args": [
          "build",
          "--bin=licensebat-cli",
          "--package=licensebat-cli",
          "--manifest-path=licensebat-cli/Cargo.toml"
        ],
        "filter": {
          "name": "licensebat-cli",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
